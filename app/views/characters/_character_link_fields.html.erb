<div class="link-fields" id="character_link_<%= f.object.id || f.object.object_id %>">
  <%= f.hidden_field :id if f.object.persisted? %>
  <%= f.hidden_field :_destroy %>

  <div class="form-row">
    <div class="form-group" style="flex: 2;">
      <%= f.label :url, "URL" %>
      <%= f.url_field :url, placeholder: "https://..." %>
    </div>
    <div class="form-group" style="flex: 1;">
      <%= f.label :label, "Label (optional)" %>
      <%= f.text_field :label, placeholder: "e.g., Wikipedia" %>
    </div>
    <div class="form-group" style="flex: 0 0 auto; align-self: flex-end;">
      <%= link_to "Remove", "#", class: "btn btn-danger btn-small remove-link" %>
    </div>
  </div>
</div>
