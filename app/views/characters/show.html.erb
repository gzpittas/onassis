<div class="page-header">
  <h1><%= @character.name %></h1>
  <div class="actions">
    <%= link_to "Edit", edit_character_path(@character), class: "btn btn-secondary" %>
    <%= link_to "Delete", @character, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this character?" }, class: "btn btn-danger" %>
    <%= link_to "Back to Characters", characters_path, class: "btn btn-primary" %>
  </div>
</div>

<% if @character.card_image&.file&.attached? %>
  <div class="character-featured-image">
    <%= image_tag @character.card_image.file.variant(:medium), alt: @character.name %>
  </div>
<% end %>

<div class="card">
  <div class="detail-grid">
    <% if @character.relationship.present? %>
      <div class="detail-item">
        <label>Relationship to Onassis</label>
        <div class="value"><span class="tag"><%= @character.relationship.titleize %></span></div>
      </div>
    <% end %>
    <% if @character.lifespan.present? %>
      <div class="detail-item">
        <label>Lifespan</label>
        <div class="value"><%= @character.lifespan %><% if @character.age_label %> (<%= @character.age_label %>)<% end %></div>
      </div>
    <% end %>
    <% if @character.nationality.present? %>
      <div class="detail-item">
        <label>Nationality</label>
        <div class="value"><%= @character.nationality %></div>
      </div>
    <% end %>
    <% if @character.occupation.present? %>
      <div class="detail-item">
        <label>Occupation</label>
        <div class="value"><%= @character.occupation %></div>
      </div>
    <% end %>
  </div>
</div>

<% if @character.bio.present? %>
  <div class="detail-section">
    <h2>Biography</h2>
    <div class="card">
      <p><%= simple_format(@character.bio) %></p>
    </div>
  </div>
<% end %>

<div class="detail-section">
  <h2>Casting Candidates (<%= @character.casting_candidates.count %>)</h2>
  <% if @character.casting_candidates.any? %>
    <div class="candidate-thumbnails">
      <% @character.casting_candidates.by_priority.each do |candidate| %>
        <div class="candidate-thumbnail-item">
          <% if candidate.image_url.present? %>
            <%= link_to character_casting_candidate_path(@character, candidate) do %>
              <%= image_tag candidate.image_url, alt: candidate.actor_name, class: "candidate-thumb", loading: "lazy" %>
            <% end %>
          <% end %>
          <span class="candidate-thumb-name"><%= link_to candidate.actor_name, character_casting_candidate_path(@character, candidate) %></span>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="card-meta">No casting candidates yet.</p>
  <% end %>
  <%= link_to "Add Casting Candidate", new_character_casting_candidate_path(@character), class: "btn btn-secondary btn-small" %>
</div>

<div class="detail-section" data-controller="gallery-lightbox">
  <h2>Images (<%= @character.images.count %>)</h2>
  <% if @character.images.any? %>
    <div class="related-images-grid">
      <% @character.images.by_date.each do |image| %>
        <div class="related-image-item"
             data-gallery-lightbox-target="item"
             data-image-id="<%= image.id %>"
             data-full-url="<%= image.file.attached? ? url_for(image.file) : '' %>"
             data-title="<%= image.display_title %>"
             data-path="<%= image_path(image) %>">
          <%= link_to image do %>
            <% if image.file.attached? %>
              <%= image_tag image.file.variant(:small), loading: "lazy" %>
            <% end %>
          <% end %>
          <button type="button"
                  class="gallery-expand-btn"
                  data-action="click->gallery-lightbox#open"
                  data-image-id="<%= image.id %>"
                  title="View in lightbox">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 3 21 3 21 9"></polyline>
              <polyline points="9 21 3 21 3 15"></polyline>
              <line x1="21" y1="3" x2="14" y2="10"></line>
              <line x1="3" y1="21" x2="10" y2="14"></line>
            </svg>
          </button>
          <p class="related-image-caption"><%= image.display_title %></p>
        </div>
      <% end %>
    </div>

    <div class="gallery-lightbox hidden" data-gallery-lightbox-target="modal">
      <div class="gallery-lightbox-overlay" data-action="click->gallery-lightbox#close"></div>
      <button type="button" class="gallery-lightbox-nav gallery-lightbox-prev" data-action="click->gallery-lightbox#previous">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <div class="gallery-lightbox-content">
        <button type="button" class="gallery-lightbox-close" data-action="click->gallery-lightbox#close">&times;</button>
        <img data-gallery-lightbox-target="image" src="" alt="">
        <div class="gallery-lightbox-footer">
          <p class="gallery-lightbox-title" data-gallery-lightbox-target="title"></p>
          <p class="gallery-lightbox-counter" data-gallery-lightbox-target="counter"></p>
          <%= link_to "View Details", "#", class: "btn btn-secondary btn-small", data: { gallery_lightbox_target: "link" } %>
        </div>
      </div>
      <button type="button" class="gallery-lightbox-nav gallery-lightbox-next" data-action="click->gallery-lightbox#next">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  <% else %>
    <p class="card-meta">No images yet.</p>
  <% end %>
  <%= link_to "Add Image", new_image_path, class: "btn btn-secondary btn-small" %>
</div>

<div class="detail-section">
  <h2>Links</h2>
  <% if @character.character_links.any? %>
    <div class="card">
      <ul class="source-links">
        <% @character.character_links.each do |link| %>
          <li>
            <%= link_to link.label.present? ? link.label : link.url, link.url, target: "_blank", rel: "noopener noreferrer" %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= link_to "Add a Link", edit_character_path(@character, anchor: "character-links"), class: "btn btn-secondary btn-small" %>
</div>

<div class="detail-section">
  <h2>Related Articles (<%= @character.articles.count %>)</h2>
  <% if @character.articles.any? %>
    <% @character.articles.by_date.each do |article| %>
      <div class="card source-card">
        <div class="source-header">
          <strong><%= link_to article.title, article %></strong>
          <% if article.publication.present? %>
            <span class="tag"><%= article.publication %></span>
          <% end %>
        </div>
        <% if article.author.present? %>
          <p class="source-author">By <%= article.author %></p>
        <% end %>
        <% if article.publication_date.present? %>
          <p class="source-pages"><%= article.publication_date.strftime("%B %d, %Y") %></p>
        <% end %>
        <p class="source-link"><%= link_to article.url, article.url, target: "_blank", rel: "noopener noreferrer" %></p>
      </div>
    <% end %>
  <% else %>
    <p class="card-meta">No related newspaper articles yet.</p>
  <% end %>
  <%= link_to "Add Article", new_article_path, class: "btn btn-secondary btn-small" %>
</div>

<div class="detail-section">
  <h2>Timeline Appearances (<%= @entries.count %>)</h2>
  <% if @entries.any? %>
    <div class="timeline">
      <% @entries.each do |entry| %>
        <div class="timeline-entry">
          <div class="timeline-date"><%= entry.date_display %></div>
          <h3 class="timeline-title">
            <%= link_to entry.title, entry %>
          </h3>
          <% if entry.description.present? %>
            <p class="timeline-description"><%= truncate(entry.description, length: 150) %></p>
          <% end %>
          <div class="timeline-meta">
            <% if entry.entry_type.present? %>
              <span class="tag tag-type"><%= entry.entry_type.titleize %></span>
            <% end %>
            <% entry.characters.each do |character| %>
              <% age = character.age_at(entry.event_date_for_age) %>
              <%= link_to character, class: "tag tag-character" do %>
                <%= character.name %><% if age %> - <%= age %><% end %>
              <% end %>
            <% end %>
            <% if entry.source.present? %>
              <span>Source: <%= entry.source.title %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No timeline entries yet for this character.</p>
      <%= link_to "Add an entry", new_entry_path, class: "btn btn-gold" %>
    </div>
  <% end %>
</div>
