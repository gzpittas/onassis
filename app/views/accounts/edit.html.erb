<div class="page-header">
  <h1>Timeline Settings</h1>
</div>

<%= form_with model: @account, local: true do |f| %>
  <% if @account.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@account.errors.count, "error") %> prohibited these settings from being saved:</h3>
      <ul>
        <% @account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Timeline Name" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :main_character_id, "Main Character (auto-included on new entries)" %>
    <%= f.select :main_character_id,
                 options_from_collection_for_select(@characters, :id, :name, @account.main_character_id),
                 { include_blank: "No main character selected" } %>
    <p class="form-hint">Choose one person to be preselected by default on new timeline entries.</p>
  </div>

  <div class="form-actions">
    <%= f.submit "Save Settings", class: "btn btn-gold" %>
    <%= link_to "Cancel", accounts_path, class: "btn btn-secondary" %>
  </div>
<% end %>
