<div class="page-header">
  <h1>Timelines</h1>
  <% if can_write? && current_user.can_create_timeline? %>
    <%= link_to "New Timeline", new_account_path, class: "btn btn-gold" %>
  <% end %>
</div>

<% @accounts.each do |account| %>
  <div class="card">
    <div class="card-header">
      <h2 class="card-title"><%= account.name %></h2>
      <% if current_account&.id == account.id %>
        <span class="card-meta">Current</span>
      <% else %>
        <%= button_to "Switch", select_account_path(account), method: :patch, class: "btn btn-secondary btn-small" %>
      <% end %>
      <% if @owned_account_ids.include?(account.id) %>
        <%= link_to "Settings", edit_account_path(account), class: "btn btn-secondary btn-small" %>
      <% end %>
    </div>
    <div class="card-body">
      <p class="card-meta">Owner: <%= account.owner.email %></p>
      <% if account.main_character.present? %>
        <p class="card-meta">Main character: <%= account.main_character.name %></p>
      <% end %>
    </div>
  </div>
<% end %>
