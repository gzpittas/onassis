<div class="page-header">
  <h1><%= @location.name %></h1>
  <div class="actions">
    <% if can_write? %>
      <%= link_to "Edit", edit_location_path(@location), class: "btn btn-secondary" %>
      <%= link_to "Delete", @location, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this location?" }, class: "btn btn-danger" %>
    <% end %>
    <%= link_to "Back to Locations", locations_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="detail-grid">
  <div class="detail-item">
    <label>Type</label>
    <div class="value"><%= @location.type_display %></div>
  </div>
  <% if @location.full_location.present? %>
    <div class="detail-item">
      <label>Full Location</label>
      <div class="value"><%= @location.full_location %></div>
    </div>
  <% end %>
</div>

<% if @location.continent.present? || @location.country.present? || @location.region.present? || @location.city.present? %>
  <div class="detail-section">
    <h2>Location Details</h2>
    <div class="card">
      <div class="detail-grid">
        <% if @location.continent.present? %>
          <div class="detail-item">
            <label>Continent</label>
            <div class="value"><%= @location.continent %></div>
          </div>
        <% end %>
        <% if @location.country.present? %>
          <div class="detail-item">
            <label>Country</label>
            <div class="value"><%= @location.country %></div>
          </div>
        <% end %>
        <% if @location.region.present? %>
          <div class="detail-item">
            <label>Region</label>
            <div class="value"><%= @location.region %></div>
          </div>
        <% end %>
        <% if @location.city.present? %>
          <div class="detail-item">
            <label>City</label>
            <div class="value"><%= @location.city %></div>
          </div>
        <% end %>
        <% if @location.neighborhood.present? %>
          <div class="detail-item">
            <label>Neighborhood</label>
            <div class="value"><%= @location.neighborhood %></div>
          </div>
        <% end %>
        <% if @location.address.present? %>
          <div class="detail-item">
            <label>Address</label>
            <div class="value"><%= @location.address %></div>
          </div>
        <% end %>
        <% if @location.building.present? %>
          <div class="detail-item">
            <label>Building</label>
            <div class="value"><%= @location.building %></div>
          </div>
        <% end %>
        <% if @location.room.present? %>
          <div class="detail-item">
            <label>Room</label>
            <div class="value"><%= @location.room %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% if @location.description.present? %>
  <div class="detail-section">
    <h2>Description</h2>
    <div class="card">
      <p><%= simple_format(@location.description) %></p>
    </div>
  </div>
<% end %>

<% if @location.notes.present? %>
  <div class="detail-section">
    <h2>Production Notes</h2>
    <div class="card">
      <p><%= simple_format(@location.notes) %></p>
    </div>
  </div>
<% end %>

<div class="detail-section" data-controller="gallery-lightbox">
  <h2>Images (<%= @location.images.count %>)</h2>
  <% if @location.images.any? %>
    <div class="related-images-grid">
      <% @location.images.by_date.each do |image| %>
        <div class="related-image-item"
             data-gallery-lightbox-target="item"
             data-image-id="<%= image.id %>"
             data-full-url="<%= image.file.attached? ? url_for(image.file) : '' %>"
             data-title="<%= image.display_title %>"
             data-path="<%= image_path(image) %>">
          <%= link_to image do %>
            <% if image.file.attached? %>
              <%= image_tag image.file.variant(:small), loading: "lazy" %>
            <% end %>
          <% end %>
          <button type="button"
                  class="gallery-expand-btn"
                  data-action="click->gallery-lightbox#open"
                  data-image-id="<%= image.id %>"
                  title="View in lightbox">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 3 21 3 21 9"></polyline>
              <polyline points="9 21 3 21 3 15"></polyline>
              <line x1="21" y1="3" x2="14" y2="10"></line>
              <line x1="3" y1="21" x2="10" y2="14"></line>
            </svg>
          </button>
          <p class="related-image-caption">
            <%= image.display_title %>
            <% if image.taken_date.present? %>
              <br><small><%= image.taken_date.year %></small>
            <% end %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="gallery-lightbox hidden" data-gallery-lightbox-target="modal">
      <div class="gallery-lightbox-overlay" data-action="click->gallery-lightbox#close"></div>
      <button type="button" class="gallery-lightbox-nav gallery-lightbox-prev" data-action="click->gallery-lightbox#previous">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <div class="gallery-lightbox-content">
        <button type="button" class="gallery-lightbox-close" data-action="click->gallery-lightbox#close">&times;</button>
        <img data-gallery-lightbox-target="image" src="" alt="">
        <div class="gallery-lightbox-footer">
          <p class="gallery-lightbox-title" data-gallery-lightbox-target="title"></p>
          <p class="gallery-lightbox-counter" data-gallery-lightbox-target="counter"></p>
          <%= link_to "View Details", "#", class: "btn btn-secondary btn-small", data: { gallery_lightbox_target: "link" } %>
        </div>
      </div>
      <button type="button" class="gallery-lightbox-nav gallery-lightbox-next" data-action="click->gallery-lightbox#next">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  <% else %>
    <p class="card-meta">No images yet.</p>
  <% end %>
  <% if can_write? %>
    <%= link_to "Add Image", new_image_path, class: "btn btn-secondary btn-small" %>
  <% end %>
</div>

<% if @location.entries.any? %>
  <div class="detail-section">
    <h2>Related Events (<%= @location.entries.count %>)</h2>
    <% @location.entries.chronological.each do |entry| %>
      <div class="card source-card">
        <div class="source-header">
          <strong><%= link_to entry.title, entry %></strong>
          <% if entry.entry_type.present? %>
            <span class="tag tag-type"><%= entry.entry_type.titleize %></span>
          <% end %>
        </div>
        <p class="source-pages"><%= entry.date_display %></p>
      </div>
    <% end %>
  </div>
<% end %>
