<%= form_with model: @location, local: true do |f| %>
  <% if @location.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h3>
      <ul>
        <% @location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :name, "Location Name" %>
      <%= f.text_field :name, placeholder: "e.g., Avenue Foch Apartment, Christina O, Buenos Aires" %>
      <p class="form-hint">A memorable name for this location.</p>
    </div>

    <div class="form-group">
      <%= f.label :location_type, "Type" %>
      <%= f.select :location_type, Location::LOCATION_TYPES.map { |t| [t.titleize, t] }, { include_blank: "Select type..." } %>
    </div>
  </div>

  <div class="form-section">
    <h3>Geographic Hierarchy</h3>
    <p class="form-hint">Fill in as many fields as apply. All fields are optional.</p>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :continent %>
        <%= f.text_field :continent, placeholder: "e.g., Europe, South America" %>
      </div>

      <div class="form-group">
        <%= f.label :country %>
        <%= f.text_field :country, placeholder: "e.g., Greece, Argentina, France" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :region, "Region / State" %>
        <%= f.text_field :region, placeholder: "e.g., Attica, Île-de-France" %>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, placeholder: "e.g., Athens, Paris, Buenos Aires" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :neighborhood %>
        <%= f.text_field :neighborhood, placeholder: "e.g., 16th Arrondissement, Glyfada" %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, placeholder: "e.g., 88 Avenue Foch" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :building %>
        <%= f.text_field :building, placeholder: "e.g., Olympic Tower, Château de la Croë" %>
      </div>

      <div class="form-group">
        <%= f.label :room %>
        <%= f.text_field :room, placeholder: "e.g., Main Salon, Master Suite" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Historical details about this location..." %>
  </div>

  <div class="form-group">
    <%= f.label :notes, "Production Notes" %>
    <%= f.text_area :notes, placeholder: "Notes for production: filming permits, current condition, alternatives..." %>
  </div>

  <div class="form-columns">
    <div class="form-column">
      <h3>Related Events</h3>
      <div class="simple-checkbox-list">
        <% current_decade = nil %>
        <% @entries.each do |entry| %>
          <% entry_decade = (entry.event_date.year / 10) * 10 %>
          <% if entry_decade != current_decade %>
            <% current_decade = entry_decade %>
            <div class="decade-divider"><%= current_decade %>s</div>
          <% end %>
          <label class="simple-checkbox-item">
            <%= check_box_tag "location[entry_ids][]", entry.id, @location.entries.include?(entry), id: "entry_#{entry.id}" %>
            <span class="simple-checkbox-content">
              <span class="simple-checkbox-title"><%= entry.title %></span>
              <span class="simple-checkbox-meta"><%= entry.event_date.strftime("%Y %b %d").upcase %></span>
            </span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="form-column" data-controller="gallery-picker" data-gallery-picker-featured-value="<%= @location.featured_image_id %>">
      <h3>Images of this Location</h3>
      <button type="button" class="btn btn-secondary btn-small" style="margin-bottom: 1rem;" data-action="click->gallery-picker#open">
        Select from Gallery
      </button>
      <p class="form-hint">Click the star on an image to set it as the card thumbnail.</p>

      <input type="hidden" name="location[featured_image_id]" value="<%= @location.featured_image_id %>" data-gallery-picker-target="featuredInput">

      <div class="selected-images-preview" data-gallery-picker-target="preview">
        <% @location.images.each do |image| %>
          <div class="selected-image-thumb <%= 'is-featured' if @location.featured_image_id == image.id %>" data-image-id="<%= image.id %>">
            <% if image.file.attached? %>
              <%= image_tag image.file.variant(:picker),
                  alt: image.display_title,
                  data: { action: "click->gallery-picker#showLightbox", full_url: url_for(image.file), title: image.display_title } %>
            <% end %>
            <button type="button" class="featured-image-btn" data-action="click->gallery-picker#setFeatured" data-image-id="<%= image.id %>" title="Set as card image">&#9733;</button>
            <button type="button" class="remove-image-btn" data-action="click->gallery-picker#removeImage" data-image-id="<%= image.id %>">&times;</button>
          </div>
        <% end %>
      </div>

      <div class="selected-image-ids" data-gallery-picker-target="hiddenInputs">
        <% @location.images.each do |image| %>
          <input type="hidden" name="location[image_ids][]" value="<%= image.id %>" data-image-id="<%= image.id %>">
        <% end %>
      </div>

      <div class="gallery-picker-modal hidden" data-gallery-picker-target="modal">
        <div class="gallery-picker-overlay" data-action="click->gallery-picker#close"></div>
        <div class="gallery-picker-content">
          <div class="gallery-picker-header">
            <h3>Select Images</h3>
            <button type="button" class="gallery-picker-close" data-action="click->gallery-picker#close">&times;</button>
          </div>
          <div class="gallery-picker-grid">
            <% @images.each do |image| %>
              <div class="gallery-picker-item"
                   data-action="click->gallery-picker#toggleImage"
                   data-image-id="<%= image.id %>"
                   data-image-title="<%= image.display_title %>"
                   data-image-url="<%= image.file.attached? ? url_for(image.file.variant(:picker)) : '' %>"
                   data-image-full-url="<%= image.file.attached? ? url_for(image.file) : '' %>"
                   data-gallery-picker-target="item"
                   data-selected="<%= @location.images.include?(image) %>">
                <% if image.file.attached? %>
                  <%= image_tag image.file.variant(:picker_wide), alt: image.display_title %>
                <% end %>
                <p class="gallery-picker-item-title"><%= truncate(image.display_title, length: 30) %></p>
                <div class="gallery-picker-check">&#10003;</div>
              </div>
            <% end %>
          </div>
          <div class="gallery-picker-footer">
            <button type="button" class="btn btn-gold" data-action="click->gallery-picker#confirm">Done</button>
            <button type="button" class="btn btn-secondary" data-action="click->gallery-picker#close">Cancel</button>
          </div>
        </div>
      </div>

      <div class="image-lightbox hidden" data-gallery-picker-target="lightbox">
        <div class="image-lightbox-overlay" data-action="click->gallery-picker#closeLightbox"></div>
        <div class="image-lightbox-content">
          <button type="button" class="image-lightbox-close" data-action="click->gallery-picker#closeLightbox">&times;</button>
          <img data-gallery-picker-target="lightboxImage" src="" alt="">
          <p class="image-lightbox-title" data-gallery-picker-target="lightboxTitle"></p>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-gold" %>
    <%= link_to "Cancel", locations_path, class: "btn btn-secondary" %>
  </div>
<% end %>
