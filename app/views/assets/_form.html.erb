<%= form_with model: @asset, local: true do |f| %>
  <% if @asset.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@asset.errors.count, "error") %> prohibited this asset from being saved:</h3>
      <ul>
        <% @asset.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "e.g., Christina O (Yacht)" %>
    </div>

    <div class="form-group">
      <%= f.label :asset_type, "Type" %>
      <%= f.select :asset_type, Asset::ASSET_TYPES.map { |t| [t.titleize, t] }, { include_blank: "Select type..." } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :manufacturer, "Manufacturer / Builder" %>
    <%= f.text_field :manufacturer, placeholder: "e.g., Howaldtswerke-Deutsche Werft" %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :acquisition_date, "Date Acquired" %>
      <%= f.date_field :acquisition_date, min: "1800-01-01", max: "2100-12-31" %>
      <p class="form-hint">If you only know the year or month, use Jan 1st as a placeholder.</p>
    </div>

    <div class="form-group">
      <%= f.label :acquisition_date_precision, "Date Precision" %>
      <%= f.select :acquisition_date_precision, [
        ["Exact date", "exact"],
        ["Month only", "month"],
        ["Year only", "year"],
        ["Decade only", "decade"],
        ["Approximate", "approximate"]
      ], {}, { class: "precision-select" } %>
      <p class="form-hint">Controls how the date is displayed.</p>
    </div>

    <div class="form-group">
      <%= f.label :disposition_date, "Disposition" %>
      <%= f.text_field :disposition_date, placeholder: "e.g., 1975, Sold 1980, Destroyed" %>
      <p class="form-hint">When/how was this asset disposed of?</p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Historical details about this asset..." %>
  </div>

  <div class="form-group">
    <%= f.label :notes, "Production Notes" %>
    <%= f.text_area :notes, placeholder: "Notes for production research: replicas needed, filming considerations, etc." %>
  </div>

  <div class="form-section">
    <h3>Reference Link</h3>
    <p class="form-hint">Link to an auction page, museum record, Wikipedia article, or other reference.</p>
    <div class="form-row">
      <div class="form-group">
        <%= f.label :reference_title, "Title" %>
        <%= f.text_field :reference_title, placeholder: "e.g., Bonhams 2022 Auction Listing" %>
      </div>
      <div class="form-group">
        <%= f.label :reference_url, "URL" %>
        <%= f.url_field :reference_url, placeholder: "https://..." %>
      </div>
    </div>
  </div>

  <div class="form-columns">
    <div class="form-column">
      <h3>Related Events</h3>
      <div class="simple-checkbox-list">
        <% current_decade = nil %>
        <% @entries.each do |entry| %>
          <% entry_decade = entry.event_decade_value %>
          <% if entry_decade != current_decade %>
            <% current_decade = entry_decade %>
            <div class="decade-divider"><%= entry.event_decade_label %></div>
          <% end %>
          <label class="simple-checkbox-item">
            <%= check_box_tag "asset[entry_ids][]", entry.id, @asset.entries.include?(entry), id: "entry_#{entry.id}" %>
            <span class="simple-checkbox-content">
              <span class="simple-checkbox-title"><%= entry.title %></span>
              <span class="simple-checkbox-meta"><%= entry.formatted_date("%Y %b %d").upcase %></span>
            </span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="form-column" data-controller="gallery-picker" data-gallery-picker-featured-value="<%= @asset.featured_image_id %>">
      <h3>Images of this Asset</h3>
      <button type="button" class="btn btn-secondary btn-small" style="margin-bottom: 1rem;" data-action="click->gallery-picker#open">
        Select from Gallery
      </button>
      <p class="form-hint">Click the star on an image to set it as the card thumbnail.</p>

      <input type="hidden" name="asset[featured_image_id]" value="<%= @asset.featured_image_id %>" data-gallery-picker-target="featuredInput">

      <div class="selected-images-preview" data-gallery-picker-target="preview">
        <% @asset.images.each do |image| %>
          <div class="selected-image-thumb <%= 'is-featured' if @asset.featured_image_id == image.id %>" data-image-id="<%= image.id %>">
            <% if image.file.attached? %>
              <%= image_tag image.file.variant(:picker),
                  alt: image.display_title,
                  data: { action: "click->gallery-picker#showLightbox", full_url: url_for(image.file), title: image.display_title } %>
            <% end %>
            <button type="button" class="featured-image-btn" data-action="click->gallery-picker#setFeatured" data-image-id="<%= image.id %>" title="Set as card image">&#9733;</button>
            <button type="button" class="remove-image-btn" data-action="click->gallery-picker#removeImage" data-image-id="<%= image.id %>">&times;</button>
          </div>
        <% end %>
      </div>

      <div class="selected-image-ids" data-gallery-picker-target="hiddenInputs">
        <% @asset.images.each do |image| %>
          <input type="hidden" name="asset[image_ids][]" value="<%= image.id %>" data-image-id="<%= image.id %>">
        <% end %>
      </div>

      <div class="gallery-picker-modal hidden" data-gallery-picker-target="modal">
        <div class="gallery-picker-overlay" data-action="click->gallery-picker#close"></div>
        <div class="gallery-picker-content">
          <div class="gallery-picker-header">
            <h3>Select Images</h3>
            <button type="button" class="gallery-picker-close" data-action="click->gallery-picker#close">&times;</button>
          </div>
          <div class="gallery-picker-grid">
            <% @images.each do |image| %>
              <div class="gallery-picker-item"
                   data-action="click->gallery-picker#toggleImage"
                   data-image-id="<%= image.id %>"
                   data-image-title="<%= image.display_title %>"
                   data-image-url="<%= image.file.attached? ? url_for(image.file.variant(:picker)) : '' %>"
                   data-image-full-url="<%= image.file.attached? ? url_for(image.file) : '' %>"
                   data-gallery-picker-target="item"
                   data-selected="<%= @asset.images.include?(image) %>">
                <% if image.file.attached? %>
                  <%= image_tag image.file.variant(:picker_wide), alt: image.display_title %>
                <% end %>
                <p class="gallery-picker-item-title"><%= truncate(image.display_title, length: 30) %></p>
                <div class="gallery-picker-check">&#10003;</div>
              </div>
            <% end %>
          </div>
          <div class="gallery-picker-footer">
            <button type="button" class="btn btn-gold" data-action="click->gallery-picker#confirm">Done</button>
            <button type="button" class="btn btn-secondary" data-action="click->gallery-picker#close">Cancel</button>
          </div>
        </div>
      </div>

      <div class="image-lightbox hidden" data-gallery-picker-target="lightbox">
        <div class="image-lightbox-overlay" data-action="click->gallery-picker#closeLightbox"></div>
        <div class="image-lightbox-content">
          <button type="button" class="image-lightbox-close" data-action="click->gallery-picker#closeLightbox">&times;</button>
          <img data-gallery-picker-target="lightboxImage" src="" alt="">
          <p class="image-lightbox-title" data-gallery-picker-target="lightboxTitle"></p>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-gold" %>
    <%= link_to "Cancel", assets_path, class: "btn btn-secondary" %>
  </div>
<% end %>
