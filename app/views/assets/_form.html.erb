<%= form_with model: @asset, local: true do |f| %>
  <% if @asset.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@asset.errors.count, "error") %> prohibited this asset from being saved:</h3>
      <ul>
        <% @asset.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "e.g., Christina O (Yacht)" %>
    </div>

    <div class="form-group">
      <%= f.label :asset_type, "Type" %>
      <%= f.select :asset_type, Asset::ASSET_TYPES.map { |t| [t.titleize, t] }, { include_blank: "Select type..." } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :manufacturer, "Manufacturer / Builder" %>
    <%= f.text_field :manufacturer, placeholder: "e.g., Howaldtswerke-Deutsche Werft" %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :acquisition_date, "Date Acquired" %>
      <%= f.date_field :acquisition_date, min: "1800-01-01", max: "2100-12-31" %>
      <p class="form-hint">When was this asset acquired? Will appear on the timeline.</p>
    </div>

    <div class="form-group">
      <%= f.label :disposition_date, "Disposition" %>
      <%= f.text_field :disposition_date, placeholder: "e.g., 1975, Sold 1980, Destroyed" %>
      <p class="form-hint">When/how was this asset disposed of?</p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Historical details about this asset..." %>
  </div>

  <div class="form-group">
    <%= f.label :notes, "Production Notes" %>
    <%= f.text_area :notes, placeholder: "Notes for production research: replicas needed, filming considerations, etc." %>
  </div>

  <div class="form-columns">
    <div class="form-column">
      <h3>Related Events</h3>
      <div class="simple-checkbox-list">
        <% current_decade = nil %>
        <% @entries.each do |entry| %>
          <% entry_decade = (entry.event_date.year / 10) * 10 %>
          <% if entry_decade != current_decade %>
            <% current_decade = entry_decade %>
            <div class="decade-divider"><%= current_decade %>s</div>
          <% end %>
          <label class="simple-checkbox-item">
            <%= check_box_tag "asset[entry_ids][]", entry.id, @asset.entries.include?(entry), id: "entry_#{entry.id}" %>
            <span class="simple-checkbox-content">
              <span class="simple-checkbox-title"><%= entry.title %></span>
              <span class="simple-checkbox-meta"><%= entry.event_date.strftime("%Y %b %d").upcase %></span>
            </span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="form-column">
      <h3>Images of this Asset</h3>
      <div class="simple-checkbox-list">
        <% @images.each do |image| %>
          <label class="simple-checkbox-item">
            <%= check_box_tag "asset[image_ids][]", image.id, @asset.images.include?(image), id: "image_#{image.id}" %>
            <span class="simple-checkbox-title"><%= image.display_title %></span>
          </label>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-gold" %>
    <%= link_to "Cancel", assets_path, class: "btn btn-secondary" %>
  </div>
<% end %>
