<div class="page-header">
  <h1><%= @casting_candidate.actor_name %></h1>
  <div class="actions">
    <% if can_write? %>
      <%= link_to "Edit", edit_character_casting_candidate_path(@character, @casting_candidate), class: "btn btn-secondary" %>
      <%= link_to "Delete", character_casting_candidate_path(@character, @casting_candidate), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <% end %>
    <%= link_to "Back to #{@character.name}", @character, class: "btn btn-primary" %>
  </div>
</div>

<div class="card">
  <div class="detail-grid">
    <div class="detail-item">
      <label>Character</label>
      <div class="value"><%= link_to @character.name, @character %></div>
    </div>
    <% if @casting_candidate.priority.present? %>
      <div class="detail-item">
        <label>Priority</label>
        <div class="value"><%= @casting_candidate.priority %></div>
      </div>
    <% end %>
    <% if @casting_candidate.imdb_url.present? %>
      <div class="detail-item">
        <label>IMDb</label>
        <div class="value"><%= link_to "View on IMDb", @casting_candidate.imdb_url, target: "_blank", rel: "noopener noreferrer" %></div>
      </div>
    <% end %>
  </div>

  <% if @casting_candidate.image_url.present? %>
    <div class="detail-section">
      <%= image_tag @casting_candidate.image_url, alt: @casting_candidate.actor_name, style: "max-width: 300px; border-radius: 8px;" %>
    </div>
  <% end %>

  <% if @casting_candidate.notes.present? %>
    <div class="detail-section">
      <h3>Notes</h3>
      <p><%= simple_format(@casting_candidate.notes) %></p>
    </div>
  <% end %>
</div>
