<%= form_with model: @image, local: true do |f| %>
  <% if @image.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h3>
      <ul>
        <% @image.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" data-controller="image-source">
    <%= f.label :file, "Image File" %>
    <% if @image.file.attached? %>
      <div class="current-image">
        <%= image_tag @image.file.variant(resize_to_limit: [200, 200]), class: "preview-thumbnail" %>
        <p class="form-hint">Current image. Upload a new file to replace it.</p>
      </div>
    <% end %>

    <div class="image-source-tabs">
      <button type="button" class="source-tab" data-image-source-target="uploadTab" data-action="click->image-source#showUpload">
        Upload File
      </button>
      <button type="button" class="source-tab active" data-image-source-target="urlTab" data-action="click->image-source#showUrl">
        Import from URL
      </button>
    </div>

    <div class="image-source-panel hidden" data-image-source-target="uploadPanel">
      <%= f.file_field :file, accept: "image/*", class: "file-input" %>
      <p class="form-hint">Accepted formats: JPG, PNG, GIF, WebP</p>
    </div>

    <div class="image-source-panel" data-image-source-target="urlPanel">
      <%= f.text_field :remote_url, placeholder: "https://example.com/image.jpg", class: "url-input", data: { image_source_target: "urlInput" } %>
      <p class="form-hint">Paste a direct link to an image. The image will be downloaded and stored locally.</p>
      <div class="url-preview hidden" data-image-source-target="preview">
        <img data-image-source-target="previewImage" class="preview-thumbnail" alt="URL Preview">
        <p class="preview-status" data-image-source-target="previewStatus"></p>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, "Caption / Title" %>
    <%= f.text_field :title, placeholder: "e.g., Onassis and Jackie at Skorpios" %>
    <p class="form-hint">Optional. Describe what's in the image.</p>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :taken_date, "Date Taken" %>
      <%= f.date_field :taken_date, min: "1800-01-01", max: "2100-12-31" %>
      <p class="form-hint">Enter a full date. If you only know the year or month, use Jan 1st as a placeholder.</p>
    </div>

    <div class="form-group">
      <%= f.label :taken_date_precision, "Date Precision" %>
      <%= f.select :taken_date_precision, [
        ["Exact date", "exact"],
        ["Month only", "month"],
        ["Year only", "year"],
        ["Decade only", "decade"],
        ["Approximate", "approximate"]
      ], {}, { class: "precision-select" } %>
      <p class="form-hint">Controls how the date is displayed (e.g., "1968" vs "October 1968").</p>
    </div>

    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location, placeholder: "e.g., Skorpios, Greece" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, placeholder: "Context, source of image, or other details..." %>
  </div>

  <div class="form-section">
    <h3>Source Information</h3>
    <p class="form-hint">Where did you find this image? This helps track provenance and attribution.</p>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :website_name, "Website / Publication" %>
        <%= f.text_field :website_name, placeholder: "e.g., Greek City Times" %>
      </div>
      <div class="form-group">
        <%= f.label :website_url, "Website URL" %>
        <%= f.url_field :website_url, placeholder: "https://greekcitytimes.com" %>
        <p class="form-hint">Auto-filled from image URL if imported.</p>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :article_title, "Article Title" %>
        <%= f.text_field :article_title, placeholder: "e.g., Aristotle Onassis: 50 Years After His Death" %>
      </div>
      <div class="form-group">
        <%= f.label :article_author, "Article Author" %>
        <%= f.text_field :article_author, placeholder: "e.g., Stella Mazonakis" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :article_url, "Article URL" %>
      <%= f.url_field :article_url, placeholder: "https://greekcitytimes.com/2025/03/15/aristotle-onassis-50-years/" %>
      <p class="form-hint">Link to the article where you found this image.</p>
    </div>
  </div>

  <div class="form-columns">
    <div class="form-column">
      <h3>Related Events</h3>
      <div class="simple-checkbox-list">
        <% current_decade = nil %>
        <% @entries.each do |entry| %>
          <% entry_decade = (entry.event_date.year / 10) * 10 %>
          <% if entry_decade != current_decade %>
            <% current_decade = entry_decade %>
            <div class="decade-divider"><%= current_decade %>s</div>
          <% end %>
          <label class="simple-checkbox-item">
            <%= check_box_tag "image[entry_ids][]", entry.id, @image.entries.include?(entry), id: "entry_#{entry.id}" %>
            <span class="simple-checkbox-content">
              <span class="simple-checkbox-title"><%= entry.title %></span>
              <span class="simple-checkbox-meta"><%= entry.event_date.strftime("%Y %b %d").upcase %></span>
            </span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="form-column">
      <h3>People in this Image</h3>
      <div class="simple-checkbox-list">
        <% @characters.each do |character| %>
          <label class="simple-checkbox-item">
            <%= check_box_tag "image[character_ids][]", character.id, @image.characters.include?(character), id: "character_#{character.id}" %>
            <span class="simple-checkbox-title"><%= character.name %></span>
          </label>
        <% end %>
      </div>

      <% if @assets.present? && @assets.any? %>
        <h3 style="margin-top: 1.5rem;">Assets in this Image</h3>
        <div class="simple-checkbox-list">
          <% @assets.each do |asset| %>
            <label class="simple-checkbox-item">
              <%= check_box_tag "image[asset_ids][]", asset.id, @image.assets.include?(asset), id: "asset_#{asset.id}" %>
              <span class="simple-checkbox-content">
                <span class="simple-checkbox-title"><%= asset.name %></span>
                <span class="simple-checkbox-meta"><%= asset.type_display %></span>
              </span>
            </label>
          <% end %>
        </div>
      <% end %>

      <% if @locations.present? && @locations.any? %>
        <h3 style="margin-top: 1.5rem;">Locations in this Image</h3>
        <div class="simple-checkbox-list">
          <% @locations.each do |location| %>
            <label class="simple-checkbox-item">
              <%= check_box_tag "image[location_ids][]", location.id, @image.locations.include?(location), id: "location_#{location.id}" %>
              <span class="simple-checkbox-content">
                <span class="simple-checkbox-title"><%= location.name %></span>
                <span class="simple-checkbox-meta"><%= location.short_location %></span>
              </span>
            </label>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-gold" %>
    <%= link_to "Cancel", images_path, class: "btn btn-secondary" %>
  </div>
<% end %>
