<div class="page-header">
  <h1>Image Gallery</h1>
  <%= link_to "Add Image", new_image_path, class: "btn btn-gold" %>
</div>

<div class="filters">
  <%= form_with url: images_path, method: :get, local: true do |f| %>
    <div class="filter-row">
      <div class="filter-group">
        <%= label_tag :decade, "Decade" %>
        <%= select_tag :decade,
            options_for_select([["All Decades", ""]] + (1900..2020).step(10).map { |d| ["#{d}s", d] }, params[:decade]),
            onchange: "this.form.submit()" %>
      </div>
      <div class="filter-group">
        <%= label_tag :character_id, "Character" %>
        <%= select_tag :character_id,
            options_for_select([["All Characters", ""]] + Character.by_name.map { |c| [c.name, c.id] }, params[:character_id]),
            onchange: "this.form.submit()" %>
      </div>
      <div class="filter-group">
        <%= link_to "Clear Filters", images_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>

<% if @images.any? %>
  <div class="image-gallery" data-controller="gallery-lightbox">
    <% @images.each do |image| %>
      <div class="gallery-item"
           data-gallery-lightbox-target="item"
           data-image-id="<%= image.id %>"
           data-full-url="<%= image.file.attached? ? url_for(image.file) : '' %>"
           data-title="<%= image.display_title %>"
           data-path="<%= image_path(image) %>">
        <%= link_to image do %>
          <% if image.file.attached? %>
            <%= image_tag image.file.variant(:thumbnail), class: "gallery-thumbnail", loading: "lazy" %>
          <% end %>
        <% end %>
        <button type="button"
                class="gallery-expand-btn"
                data-action="click->gallery-lightbox#open"
                data-image-id="<%= image.id %>"
                title="View in lightbox">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 3 21 3 21 9"></polyline>
            <polyline points="9 21 3 21 3 15"></polyline>
            <line x1="21" y1="3" x2="14" y2="10"></line>
            <line x1="3" y1="21" x2="10" y2="14"></line>
          </svg>
        </button>
        <div class="gallery-item-info">
          <h3><%= link_to image.display_title, image %></h3>
          <p class="gallery-date"><%= image.date_display %></p>
          <% if image.location.present? %>
            <p class="gallery-location"><%= image.location %></p>
          <% end %>
          <div class="gallery-tags">
            <% image.characters.limit(3).each do |character| %>
              <span class="tag tag-character"><%= character.name %></span>
            <% end %>
            <% if image.characters.count > 3 %>
              <span class="tag">+<%= image.characters.count - 3 %> more</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="gallery-lightbox hidden" data-gallery-lightbox-target="modal">
      <div class="gallery-lightbox-overlay" data-action="click->gallery-lightbox#close"></div>
      <button type="button" class="gallery-lightbox-nav gallery-lightbox-prev" data-action="click->gallery-lightbox#previous">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <div class="gallery-lightbox-content">
        <button type="button" class="gallery-lightbox-close" data-action="click->gallery-lightbox#close">&times;</button>
        <img data-gallery-lightbox-target="image" src="" alt="">
        <div class="gallery-lightbox-footer">
          <p class="gallery-lightbox-title" data-gallery-lightbox-target="title"></p>
          <p class="gallery-lightbox-counter" data-gallery-lightbox-target="counter"></p>
          <%= link_to "View Details", "#", class: "btn btn-secondary btn-small", data: { gallery_lightbox_target: "link" } %>
        </div>
      </div>
      <button type="button" class="gallery-lightbox-nav gallery-lightbox-next" data-action="click->gallery-lightbox#next">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
<% else %>
  <div class="empty-state">
    <h3>No Images Yet</h3>
    <p>Start adding historical photos to your research collection.</p>
    <%= link_to "Add Your First Image", new_image_path, class: "btn btn-gold" %>
  </div>
<% end %>
